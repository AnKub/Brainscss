<header class="header">
    <div>
        {{>logo}}
    </div>
    <nav class="header_nav">
        <div class=" header_nav_right">
            {{>nav list=header}}
        </div>
    </nav>
</header>

{{#with main}}
<div class="main">
    <img src="{{image}}" alt="Hero image" class="main_image">
    <div class="main_content">
        <h1 class="main_title">{{heading}}</h1>
        <p class="main_text">{{descriotion}} </p>
        <a href="{{href}}" class="card_but">{{button}}</a>
    </div>

</div>
{{/with}}

{{!-- +++++++++++++++++++ --}}

<main class="featured">
    {{#each featured}}
    {{>cardcard data=this}}
    {{/each}}
</main>

{{!-- +++++++++++ --}}



<div class="action">
    {{#each actions}}
    <div class="action_content">
        <h3 class="action_title">{{heading}}</h3>
        <a href="{{url}}" class="action_button">{{text}}</a>
    </div>
    {{/each}}
</div>

{{!-- ++++++++++++++ --}}

<footer class="footer">
    <div>
        {{>logo}}
        <span class="footer_copyright">Copyright 2023-2024</span>
    </div>
    {{#each footer}}
    <div>
        <span class="footer_title"> <b>{{title}}</b> </span>
        {{>nav list=links isVertical=true}}
    </div>
    {{/each}}
</footer>