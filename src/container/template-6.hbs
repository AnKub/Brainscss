<header class="header">
    <div>
        {{>logo}}
    </div>
    <nav class="header_nav">
        <div class=" header_nav_right">
            {{>nav list=header}}
        </div>
    </nav>
</header>

{{!-- form of the side left--}}

<main class="main">
    {{#with info}}
    <div class="hero">
        <h1 class="hero_title">{{title}}</h1>
        <p class="hero_text">{{description}}</p>
    </div>
    {{/with}}
    {{!-- form of the side right--}}
    {{#with form}}
    <form class="form">
        <div class="form_input_list">
            {{#each inputs}}
            <input type="{{type}}" placeholder="{{placeholder}}" id="form_input-{{id}}" class="form_input"
                name="{{name}}" />
            {{/each}}
        </div>
        <div class="form_checkbox">
            <input type="checkbox" id="{{checkbox.name}}" name="{{checkbox.name}}">
            <div></div>
            <label for="{{checkbox.name}}">{{checkbox.label}}</label>
        </div>
        <button type="submit" class="form_button">{{button}}</button>
        <div></div>
        <p class="form_info">{{info}}</p>
    </form>
    {{/with}}
</main>


{{!-- next block --}}
{{#with updates}}
<div class="up">
    <h1 class="up_title">{{title}}</h1>
    {{#each list}}
    <div class="up_msg">
        <div>
            <span class="up_img"></span>
        </div>
        <strong class="up_nickname">{{nickname}}</strong>
        <p class="up_text">{{description}}</p>
    </div>
    {{/each}}
    <a href="{{show_all.url}}" class="up_link">{{show_all.text}}</a>
</div>
{{/with}}


{{!-- ++++++++++++++ --}}

{{#with expirience}}
<div class="expirience">
    <h1 class="expirience_title">{{title}}</h1>
    <div class="badje">
        <h4>{{badge}}</h4>
    </div>

    <div class="expirience_cont">
        {{#each list}}
        <div class="bb">
            <h1 class="expirience_name">{{name}}</h1>
            <p class="expirience_text">{{details}}</p>
        </div>
        {{/each}}
    </div>

</div>
{{/with}}

{{!-- +++++++++++++++ --}}



<footer class="footer">
    <div>
        {{>logo}}
        <span class="footer_copyright">Copyright 2023-2024</span>
    </div>
    {{#each footer}}
    <div>
        <span class="footer_title"> <b>{{title}}</b> </span>
        {{>nav list=links isVertical=true}}
    </div>
    {{/each}}
</footer>